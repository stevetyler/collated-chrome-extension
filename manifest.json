{
  "name": "Collated",
  "version": "1.13",
  "description": "Chrome extension to post browser tab urls to collated.net",
  "background": {
    "scripts" : [ "eventPage.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [],
      "js": [ "contextMenu.js", "openDialog.js" ]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.collated.net/*", "*://*.collated-dev.net/*"]
  },
  "manifest_version": 2,
  "permissions": ["contextMenus", "tabs", "*://*.collated.net/*", "*://*.collated-dev.net/*"]
}
